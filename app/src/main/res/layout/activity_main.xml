<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chessapp.mychessapp.MainActivity">

    <TextView
        android:id="@+id/counttime_player1"
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:elevation="10dp"
        android:fontFamily="@font/pixeboy"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.902" />

    <TextView
        android:id="@+id/counttime_player2"
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:elevation="10dp"
        android:fontFamily="@font/pixeboy"
        android:gravity="center"
        android:rotation="180"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <ImageButton
        android:id="@+id/reset"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/reset_button"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:layout_constraintBottom_toBottomOf="@+id/startstop_player1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/startstop_player1"
        android:layout_width="wrap_content"
        android:layout_height="242dp"
        android:background="#fff"
        android:scaleType="centerCrop"
        android:src="@drawable/player1_loading_screen"
        android:text="countdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/startstop_player2"
        android:layout_width="wrap_content"
        android:layout_height="242dp"
        android:background="#fff"
        android:rotation="180"
        android:scaleType="centerCrop"
        android:src="@drawable/player2_loading_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/playPause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/pause_button"
        app:layout_constraintBottom_toBottomOf="@+id/startstop_player1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startstop_player2" />

    <NumberPicker
        android:id="@+id/picker"
        android:layout_width="0dp"
        android:layout_height="98dp"
        android:descendantFocusability="blocksDescendants"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:theme="@style/DefaultNumberPickerTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startstop_player2" />

    <TextView
        android:id="@+id/turnCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixeboy"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startstop_player2"
        app:layout_constraintVertical_bias="0.965" />

    <TextView
        android:id="@+id/turnCounter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixeboy"
        android:rotation="180"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startstop_player2"
        app:layout_constraintVertical_bias="0.04" /><![CDATA[

    app:layout_constraintBottom_toBottomOf="@+id/startstop_player1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    app:layout_constraintBottom_toBottomOf="@+id/startstop_player1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/playPause"
        app:layout_constraintTop_toTopOf="@+id/startstop_player2"
        app:layout_constraintVertical_bias="0.5" />


]]>
</androidx.constraintlayout.widget.ConstraintLayout>